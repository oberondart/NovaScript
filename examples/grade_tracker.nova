array("all_grades", [95, 92, 88, 94, 90, 78, 85, 82, 88, 91, 92, 95, 89, 93, 97])
out("")
out("All Grades Combined:")
out("all_grades")

sort("all_grades")
out("Sorted All Grades:")
out("all_grades")

